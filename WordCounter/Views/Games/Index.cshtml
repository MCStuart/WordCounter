<!DOCTYPE html>
<html>
@using WordCount.Models;
<head>
    <meta charset='utf-8'>
    <title>Word Games</title>
</head>

<body>
<h1>Word Count</h1>
  <p>Your word, @Model.GetWord(), appears @Model.RepeatCounter() times in the input: @Model.GetSentence() </p>
  <a href="/games/new">Add a new word count.</a>


<form action="/games/delete" method="post">
  <button type="submit" name="button">Clear All Word Counts</button>
</form>

</body>

</html>
